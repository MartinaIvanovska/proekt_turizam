<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

</head>
<body style="background: #2E8B57">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm custom-navbar">
        <div class="container d-flex align-items-center">
            <img src="~/Content/Patuvaj_logo.png" alt="Patuvaj Logo" class="navbar-logo me-2" />
            @*@Html.ActionLink("Patuvaj", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-bold" })*@

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (User.IsInRole("TourGuide"))
                    {
                        <li>@Html.ActionLink("Add Tour", "Create", "Tours", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("My Tours", "Index", "Tours", null, new { @class = "nav-link" })</li>
                    }

                    @if (User.IsInRole("Tourist"))
                    {
                        <li>@Html.ActionLink("My Booked Tours", "Index", "Bookings", null, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Saved Tours", "Index", "SavedTours", null, new { @class = "nav-link" })</li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Tour Guide Applications", "PendingTourGuides", "Admin", null, new { @class = "nav-link" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="color: #183E0C ">
            <p>&copy; Patuvaj @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
