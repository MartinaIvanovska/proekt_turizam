@{
    ViewBag.Title = "Home Page";
}

<!-- Inline overrides to ensure tour-card styles win over Bootstrap -->
<style>
    .card.tour-card {
        background-color: #F9F2E8 !important;
        border: none !important;
        border-radius: 15px !important;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1) !important;
        overflow: hidden !important; /* Ensures image corners match the card’s rounded shape */
        transition: transform 0.2s ease, box-shadow 0.2s ease !important;
    }

        .card.tour-card:hover {
            transform: translateY(-5px) !important;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15) !important;
        }

        /* Updated image styling */
        .card.tour-card img {
            display: block !important;
            width: 100% !important; /* Fill card width */
            height: 180px !important;
            object-fit: cover !important;
            border-radius: 0 !important; /* Remove inner rounding */
            margin-bottom: 10px !important; /* Space below the image */
        }

        /* Card body adjustments */
        .card.tour-card .card-body {
            text-align: center !important;
            padding: 20px !important;
            background-color: #F9F2E8 !important;
        }

        /* Text and button styling remain the same */
        .card.tour-card .card-title {
            font-weight: bold !important;
            color: #2E8B57 !important;
            margin-bottom: 10px !important;
        }

        .card.tour-card p {
            color: #444 !important;
            margin: 5px 0 !important;
        }

        .card.tour-card .btn {
            background-color: #2E8B57 !important;
            color: #fff !important;
            border: none !important;
            border-radius: 8px !important;
            margin: 5px !important;
            transition: background-color 0.2s ease !important;
        }

            .card.tour-card .btn:hover {
                background-color: #256B45 !important;
                color: #fff !important;
            }

    /* Remove bullets and make horizontal */
    #pagination-container {
        list-style: none;
        padding: 0;
        margin: 20px 0;
        text-align: center; /* center horizontally */
    }

        /* Make li inline */
        #pagination-container li {
            display: inline-block;
            margin: 0 5px; /* spacing between buttons */
        }

            /* Style all links and span like buttons */
            #pagination-container li a,
            #pagination-container li span {
                display: inline-block;
                padding: 0.375rem 0.75rem; /* button padding */
                font-size: 1rem;
                font-weight: 400;
                line-height: 1.5;
                text-align: center;
                text-decoration: none;
                border: 1px solid transparent;
                border-radius: 0.375rem;
                cursor: pointer;
                color: #fff;
                background-color: #0d6efd ; /* primary color */
                border-color: #0d6efd;
                transition: background-color 0.2s;
            }

           
                /* Hover effect for links */
                #pagination-container li a {
                    background-color: #198754;
                    border-color: #198754;
                }

                /* Current page */
                #pagination-container li span.current {
                    background-color: #198754; /* success color */
                    border-color: #198754;
                }
            #pagination-container li a:hover {
                background-color: #136941; /* success color */
                border-color: #136941;
            }



</style>

<main>
  

    @model IEnumerable<proekt_turizam.Models.Tour>

 



    <section class="hero-banner" style="margin-bottom: 15px">
        <div class="hero-overlay"></div>
        <div class="hero-content text-center">
            <h1>Discover the Beauties of Macedonia</h1>
            <p>Find your next unforgettable adventure with Patuvaj</p>
        </div>
    </section>

   
    <div id="tour-container">
        <div class="row">
            @foreach (var tour in Model.Reverse())
            {
                <div class="col-md-4 mb-4 tour-item">
                    <div class="card tour-card h-100">
                        @if (!string.IsNullOrEmpty(tour.MainImageUrl))
                        {
                            <img src="@tour.MainImageUrl" alt="@tour.Title" />
                        }
                        <div class="card-body">
                            <h5 class="card-title">@tour.Title</h5>
                            <p>@tour.ShortDescription</p>
                            <p>@tour.City</p>
                            <p>@(tour.TourGuide?.Email)</p>
                            <div>
                                <a href="@Url.Action("Details", "Tours", new { id = tour.TourId })" class="btn">View Details</a>
                                @if (User.IsInRole("Tourist") && tour.StartDate > DateTime.Now)
                                {
                                    <a href="@Url.Action("Create", "Bookings", new { id = tour.TourId })" class="btn">Book Tour</a>
                                    <a href="@Url.Action("Create", "SavedTours", new { id = tour.TourId })" class="btn">Save Tour</a>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div id="pagination-container"></div>

    <!-- jQuery and simplePagination.js -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.6/jquery.simplePagination.min.js"></script>
    <script>
        $.getScript("https://cdnjs.cloudflare.com/ajax/libs/simplePagination.js/1.6/jquery.simplePagination.min.js", function () {
            var items = $(".tour-item");
            var numItems = items.length;
            var perPage = 6;

            items.slice(perPage).hide();

            $('#pagination-container').pagination({
                items: numItems,
                itemsOnPage: perPage,
                prevText: 'Prev',
                nextText: 'Next',
                onPageClick: function (pageNumber) {
                    var showFrom = perPage * (pageNumber - 1);
                    var showTo = showFrom + perPage;
                    items.hide().slice(showFrom, showTo).fadeIn();
                }
            });
        });
    </script>






</main>

